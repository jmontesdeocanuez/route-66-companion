# Copy this file to .env.local and fill in your values.
# Never commit .env.local to source control.
#
# Get these connection strings from Supabase:
# Project Settings > Database > Connection string
# (Use the "prisma" user you created, not "postgres")

# Supavisor Transaction Mode (port 6543) — used by Prisma at runtime (Vercel serverless)
# Disables prepared statements, which are unsupported in pgBouncer Transaction Mode
DATABASE_URL="postgres://prisma.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"

# Supavisor Session Mode (port 5432 on pooler host) — used by Prisma CLI for migrations
DIRECT_URL="postgres://prisma.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres"

# Shadow database for prisma migrate dev (separate database, not a schema)
# Create it once in Supabase SQL Editor: CREATE DATABASE prisma_shadow OWNER prisma;
SHADOW_DATABASE_URL="postgres://prisma.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/prisma_shadow"
